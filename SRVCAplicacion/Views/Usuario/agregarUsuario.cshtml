﻿@{
    Layout = "_Layout"; // Usando el layout definido
}
<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Agregar Usuario</title>

    <!-- Custom fonts for this template-->
    <script src="https://kit.fontawesome.com/c84f14ebb2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/css/datatables.min.css" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">


    <!-- End of Topbar -->
    <!-- Begin Page Content -->
    <div class="container">
        <!-- Earnings (Monthly) Card Example -->
        <!-- Content Row -->
        <!-- Area Chart -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Agregar Usuario</h6>

                </div>
                <!-- Card Body -->
                @* <div class="container-fluid"> *@



                <form class="row g-3 needs-validation" id="formUsuario" method="POST">
                    <div class="col-md-6">
                        <label for="inputName" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="usuario" name="usuario" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un nombre válido.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputSurname" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="apellido" name="apellido" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un apellido válido.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputDNI" class="form-label">DNI</label>
                        <input type="text" class="form-control" id="identificacion" name="identificacion" required>

                        <div class="invalid-feedback">
                            Por favor, ingresa un DNI válido.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputNumeroGuardia" class="form-label">Telefono</label>
                        <input type="text" class="form-control" id="telefono" name="telefono" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un telefono.
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="inputUbicacion" class="form-label">Estado</label>
                        <input type="number" class="form-control" id="estado" name="estado" placeholder="Estado" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa estado.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="puntoControl" class="form-label">Punto de Control</label>
                        <input type="number" class="form-control" id="id_punto_control" name="id_punto_control" placeholder="Punto de Control" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un sector válido.
                        </div>
                    </div>
                  
                    <div class="col-12">
                        <button type="button" id="btnConfirmar" class="btn btn-primary">Confirmar</button>
                    </div>
                </form>



                <div class="alert alert-danger mt-3 d-none" role="alert" id="formAlert">
                    Por favor, revisa los campos marcados en rojo antes de enviar el formulario.
                </div>


            </div>
        </div>

       
    </div>
                     

      <script src="~/jquery/jquery.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/jsc/index.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/jsc/sb-admin-2.min.js"></script>


    <script src="~/jsc/datatables.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/jsc/demo/chart-area-demo.js"></script>
    <script src="~/jsc/demo/chart-pie-demo.js"></script>
    <script src="~/jsc/agregarUsuario.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('btnConfirmar').addEventListener('click', agregarForm);
        });

    </script>
</body>

</html>