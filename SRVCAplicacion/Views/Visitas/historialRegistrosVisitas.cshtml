@{
    Layout = "_Layout"; // Usando el layout definido
}
<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Historial Registro Visitas</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <script src="https://kit.fontawesome.com/c84f14ebb2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/datatables.min.css" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">
    <!-- End of Topbar -->
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">HISTORIAL INGRESOS VISITAS</h1>
        </div>


        <!-- INICIO formulario registros -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                    <div class="ml-auto">
                    </div>

                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <table id="tablaRegistrosHistorialV" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Id registro</th>
                                    <th>Motivo</th>
                                    <th>Depto/Sector</th>
                                    <th>Nombre</th>
                                    <th>Identificacion</th>
                                    <th>Hora de ingreso</th>
                                    <th>Hora de salida</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--
                                <tr>
                                    <td id="idRegistroV"></td>
                                    <td id="motivoV"></td>
                                    <td id="deptoSectorV"></td>
                                    <td id="horaIngresoV"></td>
                                    <td id="horaSalidaV"></td>
                                    <td id="nombreV"></td>
                                    <td id="identificacionV"></td>
                                    <td>
                                        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editModal"><i class="fa-solid fa-pen-to-square"></i></button>
                                    </td>
                                </tr>
                                -->
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>


        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>


        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/jsc/datatables.min.js"></script>
    <script src="js/vista.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/jsc/sb-admin-2.min.js"></script>


    <!-- Page level plugins -->
    <script src="~/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/jsc/demo/chart-area-demo.js"></script>
    <script src="~/jsc/demo/chart-pie-demo.js"></script>
    <script src="~/jsc/vistas.js"></script>
    <script src="~/jsc/visitas.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            mostrarRegistrosVisitasHistorial();
        });
    </script>

</body>
</html>
