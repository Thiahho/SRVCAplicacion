        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Agregar Punto</h6>

                </div>
                <!-- Card Body -->
                @* <div class="container-fluid"> *@



                <form class="row g-3 needs-validation" novalidate action="" method="POST">
                    <div class="col-md-6">
                        <label for="inputName" class="form-label">Token</label>
                        <input type="text" class="form-control" id="inputName" name="inputName" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un nombre válido.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputSurname" class="form-label">Nombre del punto</label>
                        <input type="text" class="form-control" id="inputSurname" name="inputSurname" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un apellido válido.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputDNI" class="form-label">Estado</label>
                        <input type="text" class="form-control" id="inputDNI" name="inputDNI" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un DNI válido.
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Confirmar</button>
                    </div>
                </form>



                <div class="alert alert-danger mt-3 d-none" role="alert" id="formAlert">
                    Por favor, revisa los campos marcados en rojo antes de enviar el formulario.
                </div>


            </div>
        </div>
