﻿@{
    Layout = "_Layout"; // Usando el layout definido
}
<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Lista Inquilinos</title>

    <!-- Custom fonts for this template-->
    <script src="https://kit.fontawesome.com/c84f14ebb2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/css/datatables.min.css" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="~/jsc/Inquilino.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">


        <div class="container">

            <!-- Page Heading -->
            <!-- Content Row -->
            <div class="row">

                <!-- Earnings (Monthly) Card Example -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Lista De Inquilinos</h1>
                    </div>


                    <!-- INIC   IO Formulario para agregar Inquilinos -->
                    <div class="col-xl-12 col-lg-12" style="height:200px;">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Inquilinos</h6>

                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="chart-area">
                                    <table id="InquilinoTable" class="display" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nombre</th>
                                                <th>Apellido</th>
                                                <th>DNI</th>
                                                <th>Activo</th>
                                                <th>Telefono</th>
                                                <th>Estado</th>
                                                <th>Id punto de control</th>
                                                @* <th>Accion</th> *@
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>


                    <a class="scroll-to-top rounded" href="#page-top">
                        <i class="fas fa-angle-up"></i>
                    </a>



                    <!-- Bootstrap core JavaScript-->
                    <script src="~/jquery/jquery.min.js"></script>
                    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>

                    <!-- Core plugin JavaScript-->
                    <script src="~/jquery-easing/jquery.easing.min.js"></script>
                    <script src="~/jsc/index.js"></script>
                    <!-- Custom scripts for all pages-->
                    <script src="~/jsc/sb-admin-2.min.js"></script>


                    <script src="~/jsc/datatables.min.js"></script>

                    <!-- Page level plugins -->
                    <script src="~/chart.js/Chart.min.js"></script>

                    <!-- Page level custom scripts -->
                    <script src="~/jsc/demo/chart-area-demo.js"></script>
                    <script src="~/jsc/demo/chart-pie-demo.js"></script>

                    <script src="~/jsc/inquilino.js"></script>

                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            mostrarInquilino();
                        });
                    </script>



</body>

</html>

<style>
    .chart-area {
        overflow-x: auto; /* Permite desplazamiento horizontal si la tabla es más ancha */
        max-height: 100%; /* Ajusta la altura máxima al contenedor */
    }

    #InquilinoTable {
        width: 100%;
        table-layout: auto; /* Asegura que las columnas se ajusten al contenido */
    }
</style>