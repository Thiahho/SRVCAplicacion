@model SRCVShared.Models.log_aud
@{
    Layout = "_Layout"; // Usando el layout definido
}
<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ListaUsuarios</title>

    <!-- Custom fonts for this template-->
    <script src="https://kit.fontawesome.com/c84f14ebb2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/css/datatables.min.css" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/styles.css">

</head>
<body id="page-top">
    <div id="wrapper">
        <div class="container">
            <div class="row">
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Historial</h1>
                    </div>

                    <div class="col-xl-12 col-lg-12">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Cambios</h6>
                                <button id="sync" onclick="sincronizar()">Sincronizacion</button>


                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="chart-area">
                                    <table id="tablaLogAud" class="display table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Id registro LOG</th>
                                                <th>ID Usuario</th>
                                                <th>Accion</th>
                                                <th>Hora</th>
                                                <th>Valor Original</th>
                                                <th>Nuevo Valor</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td><input type="text" class="form-control" name="idRegistroLog" readonly></td>
                                                <td><input type="text" class="form-control" name="motivoLog" readonly></td>
                                                <td><input type="text" class="form-control" name="accionLog" readonly></td>
                                                <td><input type="text" class="form-control" name="horaLog" readonly></td>
                                                <td><input type="text" class="form-control" name="valorHoriginalLog" readonly></td>
                                                <td><input type="text" class="form-control" name="nuevoValorLog" readonly></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <a class="scroll-to-top rounded" href="#page-top">
                        <i class="fas fa-angle-up"></i>
                    </a>

                    <!-- Bootstrap core JavaScript-->
                    <script src="~/jquery/jquery.min.js" asp-append-version="true"></script>
                    <script src="~/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

                    <!-- Core plugin JavaScript-->
                    <script src="~/jquery-easing/jquery.easing.min.js" asp-append-version="true"></script>
                    <script src="~/jsc/index.js" asp-append-version="true"></script>
                    <!-- Custom scripts for all pages-->
                    <script src="~/jsc/sb-admin-2.min.js" asp-append-version="true"></script>

                    <script src="~/jsc/datatables.min.js" asp-append-version="true"></script>

                    <!-- Page level plugins -->
                    <script src="~/chart.js/Chart.min.js" asp-append-version="true"></script>

                    <!-- Page level custom scripts -->
                    <script src="~/jsc/demo/chart-area-demo.js" asp-append-version="true"></script>
                    <script src="~/jsc/demo/chart-pie-demo.js" asp-append-version="true"></script>

                    <script src="~/jsc/log_aud.js" asp-append-version="true"></script>

                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            mostrarLogMejorado();
                        });


                    </script>
                    

                </div>
            </div>
        </div>
    </div>
</body>


</html>
